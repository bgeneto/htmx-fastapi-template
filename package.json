{
    "name": "htmx-fastapi",
    "version": "1.0.0",
    "description": "FastAPI + HTMX Contact Form with Tailwind CSS",
    "scripts": {
        "build:css": "npx tailwindcss -i ./static/input.css -o ./static/output.css --minify",
        "watch:css": "npx tailwindcss -i ./static/input.css -o ./static/output.css --watch",
        "dev": "npm run watch:css"
    },
    "devDependencies": {
        "tailwindcss": "^3.4.0",
        "autoprefixer": "^10.4.16",
        "postcss": "^8.4.32"
    }
}