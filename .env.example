# Application environment (development, production)
ENV=development

# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-to-a-secure-random-string

# Database connection URL
# SQLite (development): sqlite+aiosqlite:///./test.db
# PostgreSQL (production): postgresql+asyncpg://user:password@localhost:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./app.db

# Enable debug mode (shows detailed errors, enables DEBUG-level logging)
DEBUG=true

# Optional: Log file path (if not set, logs only to console)
# Logs will be rotated at 10MB, kept for 7 days, and compressed
LOG_FILE=logs/app.log
