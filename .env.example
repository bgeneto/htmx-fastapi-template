# Application environment (development, production)
ENV=development

# Secret key for session management (generate with: openssl rand -hex 32)
SECRET_KEY=change-me-to-a-secure-random-string

# Database connection URL
# SQLite (development): sqlite+aiosqlite:///./test.db
# PostgreSQL (production): postgresql+asyncpg://user:password@localhost:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./db_data/app.db

# Enable debug mode (shows detailed errors, enables DEBUG-level logging)
DEBUG=true

# Optional: Log file path (if not set, logs only to console)
# Logs will be rotated at 10MB, kept for 7 days, and compressed
LOG_FILE=logs/app.log

# ===== Authentication Settings =====

# Session expiry (in days)
SESSION_EXPIRY_DAYS=30

# Magic link expiry time (in minutes)
MAGIC_LINK_EXPIRY_MINUTES=25

# Bootstrap Admin Account (password-based login for initial admin only)
# This admin can use password login. All other users use magic link only.
BOOTSTRAP_ADMIN_EMAIL=admin@example.com
BOOTSTRAP_ADMIN_PASSWORD=change-this-to-a-strong-password

# ===== Email Settings (Resend) =====

# Get your API key from: https://resend.com/api-keys
EMAIL_API_KEY=your-resend-api-key-here

# Email sender address and name
EMAIL_FROM_ADDRESS=noreply@example.com
EMAIL_FROM_NAME=Alpine FastAPI

# ===== Application URL =====

# Base URL for magic links (must match your deployment URL)
# Development: http://localhost:8000
# Production: https://yourdomain.com
APP_BASE_URL=http://localhost:8000

# ===== Internationalization (i18n) =====

# Enable or disable multi-language support
# true: Shows language toggle button, enables translations (English, PortuguÃªs BR)
# false: Single language mode (English only), hides language selector
ENABLE_I18N=true
